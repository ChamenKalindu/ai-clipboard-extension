{
  "manifest_version": 3,
  "name": "AI Clipboard Summarizer",
  "version": "1.0",
  "description": "Summarize copied text instantly with AI",
  "permissions": ["activeTab", "scripting", "tabs", "clipboardRead", "storage"],
  "host_permissions": ["http://localhost/*"],
  "action": {
    "default_popup": "index.html",
    "default_title": "AI Summarizer",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
